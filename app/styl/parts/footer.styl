footer
	background-color #0e4f97
	h4
		padding-left 15px
		font-conf(#ffc000, robold, 18px)
	ul
		list-style-type none
		padding 0
		li
			a
				font-conf(#fff, robreg, 13px)
.contacts
	display flex
	flex-flow column wrap
	&-phones
		display flex
	&-icon
		color #ffc000
		padding-right 10px
		margin-top 6px
	&-phone
		font-conf(#fff, robold, 16px)
		line-height 24px
	&-address
		padding-top 20px
		font-conf(#fff, robreg, 13px)
		line-height 24px
.subs
	border 1px solid #fff
	padding 20px
	&-title
		font-conf(#fff, robreg, 15px)
	&-btn
		font-conf(#212121, robreg, 13px)
		background: linear-gradient(180deg, #ffc000, #ffae00)
		padding 8.5px 10px
.btn-to-top 
	float right
	margin-top 15px
	background: linear-gradient(180deg, #3290f9, #1d74d4)
	border none
	border-radius 3px 3px 0 0
	font-conf(#fff, robreg, 13px)
	&-icon
		padding-left 5px
.copyright
	padding 15px
	display flex
	flex-flow row wrap
	justify-content space-between
	.copy
		font-conf(#212121, robreg, 13px)
	.aliace
		font-conf(#212121, robreg, 13px)